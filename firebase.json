{
    "hosting": {
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|webp|css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=2628000"
                    }
                ]
            },
            {
                "source": "/index.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            }
        ]
    }
}
